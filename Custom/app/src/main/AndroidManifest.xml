<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.custom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Custom">
        <activity
            android:name=".SendMessageActivity"
            android:label="@string/send_message_button"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ServiceDetailActivity"
            android:parentActivityName=".ServicesActivity" />
        <activity
            android:name=".EmployeesActivity"
            android:label="@string/our_team"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ContactsActivity"
            android:label="@string/our_contacts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ServicesActivity"
            android:label="@string/our_services"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".FooterText" />
        <activity android:name=".LogoHeader" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>