    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServicesActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <include layout="@layout/activity_logo_header"/>

    <fragment
        android:id="@+id/list_adapter_fragment"
        android:name="com.example.custom.ServicesFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <ListView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/list_services"/>-->
            <include
                layout="@layout/activity_footer_text"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
