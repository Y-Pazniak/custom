<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendMessageActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <include layout="@layout/activity_logo_header"/>

    <EditText
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_title"
        android:hint="@string/subject_letter"/>

    <EditText
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:id="@+id/message_description"
        android:hint="@string/message_letter"/>

    <Button
        android:onClick="onClickServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/send_message_button"
        android:id="@+id/button_send"/>

</LinearLayout>